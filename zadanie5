using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace labubuuuu
{

    public class Product
    {
        private decimal price;
        private decimal discount;
        public decimal Price
        {
            get => price;
            set
            {
                if (value < 0)
                {
                    throw new ArgumentException("Цена не может быть отрицательной!");
                }
                price = value;
            }
        }
        public decimal Discount
        {
            get => discount;
            set
            {
                if (value < 0 || value > 100)
                {
                    throw new ArgumentException("Скидка должна быть от 0 до 100!");
                }
                discount = value;
            }
        }
        public decimal FinalPrice => Price * (1 - Discount / 100);
        public string Name { get; set; } = "Без названия";

        // Конструктор
        public Product(decimal price, decimal discount)
        {
            Price = price;
            Discount = discount;
        }
        public void Show()
        {
            Console.WriteLine($"{Name}: {FinalPrice:F0} (скидка {Discount}%)");
        }
    }
}
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace labubuuuu

{
    class Program
    {
        static void Main()
        {
            try
            {
                Product product = new Product(10000, 20);
                product.Name = "ПК";
                product.Show();

                product.Discount = 10;
                product.Show();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Произошла ошибка: {ex.Message}");
            }

            try
                {
                    Product invalidProduct = new Product(-100, 10);
                }
                catch (ArgumentException ex)
                {
                    Console.WriteLine($"Ошибка: {ex.Message}");
                }
            }
    }
}
